{
  "name": "@usy-ui/components",
  "version": "1.0.0",
  "description": "A lightweight UI components for ReactJS and NextJS",
  "module": "dist",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/usy-ui/components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usy-ui/components.git"
  },
  "bugs": {
    "url": "https://github.com/usy-ui/components/issues"
  },
  "keywords": [
    "react",
    "reactjs",
    "next",
    "nextjs",
    "components",
    "library"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint src --ext .ts,.tsx,.js --fix",
    "format": "prettier src/**/*.{ts,tsx,js,json} --write",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --runInBand",
    "icon:gen": "svgr --icon 20px --title-prop --typescript --replace-attr-values #fff=currentColor --index-template .svgr-template.js --out-dir src/components/Icon src/assets/icons",
    "icon:build": "rimraf src/components/Icon/* --glob && pnpm icon:gen",
    "css:merge": "find src/styles src/components -type f -name '*.scss' -exec cat {} + > src/styles.scss",
    "css:build": "pnpm css:merge && postcss src/styles.scss -o dist/styles.css",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "rimraf dist && pnpm css:build && rollup -c --bundleConfigAsCjs --silent",
    "build:pack": "pnpm build && pnpm pack",
    "semantic-release": "semantic-release"
  },
  "author": "anhthi.ieig",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@chromatic-com/storybook": "1.9.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@rollup/plugin-url": "^8.0.2",
    "@storybook/addon-essentials": "8.3.2",
    "@storybook/addon-interactions": "8.3.2",
    "@storybook/addon-links": "8.3.2",
    "@storybook/addon-onboarding": "8.3.2",
    "@storybook/addon-styling-webpack": "^1.0.0",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/addon-webpack5-compiler-swc": "1.0.5",
    "@storybook/blocks": "8.3.2",
    "@storybook/react": "8.3.2",
    "@storybook/react-webpack5": "8.3.2",
    "@storybook/test": "8.3.2",
    "@svgr/cli": "^8.1.0",
    "@svgr/rollup": "^8.1.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "clsx": "^2.1.1",
    "css-loader": "^7.1.1",
    "cssnano": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-module-utils": "^2.11.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-scope": "^8.0.2",
    "eslint-visitor-keys": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-nested": "^6.2.0",
    "prettier": "^3.3.3",
    "prop-types": "15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "rollup": "^3.29.5",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "sass": "^1.79.3",
    "sass-loader": "^16.0.2",
    "semantic-release": "^24.1.1",
    "storybook": "8.3.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "whatwg-fetch": "^3.6.20"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
